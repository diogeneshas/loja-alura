<html>
    <body>
        <%= form_for Produto.new do |f| %>
            Nome <input type="text" name="produto[nome]"><br>
            Descricao <textarea name="produto[descricao]" id="" cols="30" rows="10"></textarea><br>
            Preco <input type="number" name="produto[preco]" step="0.01"><br>
            Quantidade <input type="number" name="produto[quantidade]" id=""><br>

            <button type="submit">Criar</button>
        <% end %>
    </body>
</html>